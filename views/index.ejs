<!-- views/index.ejs -->
<!doctype html>
<html>
<head>
	<title>Verbose</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
	<link rel="stylesheet" href="/css/indexStylesheet.css">

  <!-- configure MathJax -->
  <script type="text/x-mathjax-config">
    MathJax.Hub.Config({
      extensions: ["tex2jax.js", "TeX/noUndefined.js"],
      jax: ["input/TeX", "output/HTML-CSS"],
      tex2jax: {
        inlineMath: [ ['$','$'] ],
        displayMath: [ ['$$','$$'] ],
        processEscapes: true,
      },
      showProcessingMessages: false,
      messageStyle: "none",
      "HTML-CSS": {
        availableFonts: ["TeX"],
        scale: 80
      }
    });
  </script>

  <!-- load MathJax -->
  <script src="/lib/mathjax/MathJax.js"></script>

</head>
<body>
<div class="topbar"><p id="title">Verbose<span class="sushi">.im</span></p></div>
<div class="contents">
	<!-- LOGIN FORM -->
	<div class="windowWrapper">
	<div class="login">Login
		<form action="/login" method="post">
			<div class="form-group">
				<input type="email" class="form-control" name="email" required placeholder='Email'>
			</div>
			<div class="form-group" id="lastInput">
				<input type="password" class="form-control" name="password" required placeholder='Password'>
			</div>

			<button type="submit" class="btn btn-lg" id='subBut'>Login</button>
		</form>
	</div>

	<!-- SIGNUP FORM -->
	<div class="signup">Signup
			<form action="/signup" method="post">
		<div class="form-group">

			<input type="text" id="firstName" class="form-control" name="firstName" required placeholder="First Name">
		</div>
		<div class="form-group">
			<input type="text" id="lastName" class="form-control" name="lastName" required placeholder="Last Name">
		</div>
		<div class="form-group">
			<input type="text" class="form-control" name="username" required placeholder="Username">
		</div>
		<div class="form-group">
			<input type="email" class="form-control" name="email" required placeholder="Email">
		</div>
		<div class="form-group" id="lastInput">
			<input type="password" class="form-control" name="password" required placeholder="Password">
		</div>

		<button type="submit" id='subBut' class="btn btn-warning btn-lg">Signup</button>
	</form>
</div>
</div>
<div class="hook"> Chat with your friends using <span class="mono">code</span> and $\LaTeX$. 
<img class="screenshot" src="/img/screenshot.png" width="500" height="294"></div>
</body>
</html>